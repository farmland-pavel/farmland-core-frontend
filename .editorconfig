# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation and applies indentation rules for them
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
